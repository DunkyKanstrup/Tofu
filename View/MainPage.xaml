<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tofu.MainPage">

    <Grid RowDefinitions="50, 300, 300"
          ColumnDefinitions="*, *, *"
          >
        <Label Style="{StaticResource LargeLabel}" Text="Stats"
               Grid.ColumnSpan="4"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>
        <Button Text="Cow"
                Grid.Row="1"
                />
        <Button Text="Cow"
                Grid.Row="1"
                Grid.Column="1"
                />
        <Button Text="Cow"
                Grid.Row="1"
                Grid.Column="2"
                />
        <Button Text="Cow"
                Grid.Row="2"
                />
        <Button Text="Pig"
                Grid.Row="2"
                Grid.Column="1"/>
        
        <Button Text="Chicken"
                Grid.Row="2"
                Grid.Column="2"/>

    </Grid>
    
</ContentPage>
