<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tofu.View.MainPage"
             xmlns:viewmodel="clr-namespace:Tofu.ViewModel"
             xmlns:model="clr-namespace:Tofu.Model"
             x:DataType="viewmodel:MainViewModel"
             Title="Main Page"
             >

    <Grid ColumnDefinitions="*"
          BackgroundColor="LightGray"
          ColumnSpacing="5">
        <VerticalStackLayout
            Grid.Column="0"
            Spacing="5">
            <Label HorizontalOptions="Center" 
                   Text="Slaughtered today: 0"
                   Padding="10"/>
            <Button Text="Pig"/>
            <Button Text="Cow"/>
        </VerticalStackLayout>
    </Grid>
    
</ContentPage>
